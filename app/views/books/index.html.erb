<section>
  <h1>all the books</h1>
  <%= link_to "regresar", creators_path %>
  <ol>
    <% @books.each do |book| %>
      <li>
        <p>
          <strong>
            Book title:
          </strong>
          <%= book.title %>
        </p>
        <p>
          <strong>
            Book Author:
          </strong>
          <%= book.creator.name %>
        </p>
        <%= link_to "Edit book", edit_book_path(book.id), class: "btn btn-primary" %>
        <%= link_to "delete book", book_path(book.id), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to burn #{book.title}"}, class: "btn btn-danger" %>
      </li>
    <% end %>
  </ol>
</section>
