<section>
  <h1>Authors</h1>
  <h3>Authors List </h3>
  <%= link_to "all books", books_path, class: "btn btn-success" %>
  <ol>
    <% @creators.each do |person| %>
    <li>
      <%=person.name %>
      <%= link_to "specific author", creator_path(person.id), class: "btn btn-secondary m-2" %>
      <%= link_to "Edit author", edit_creator_path(person.id), class: "btn btn-primary" %>
      <%= link_to "delete author", creator_path(person), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to end #{person.name}s career"}, class: "btn btn-danger" %>
      <%= link_to "my books", book_path(person.id), class: "btn btn-primary" %>
      <%= link_to "add new book", new_creator_book_path(person.id), class: "btn btn-secondary" %>

    </li>
    <% end %>
  </ol>

  <%= link_to "Add author", new_creator_path, class: "btn btn-primary" %>

</section>
